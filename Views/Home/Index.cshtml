@model BabyMonitarr.Backend.Models.AudioSettings

@{
    ViewData["Title"] = "BabyMonitarr - Audio Monitors";
}

<div class="breadcrumb-dark">Monitors > <span id="breadcrumbRoomName">Select a Monitor</span> Settings</div>
<h1 class="page-title"><span id="pageTitleRoomName">Monitor</span> - Configuration</h1>

<div class="row g-4">
    <!-- Left Panel: Monitor List -->
    <div class="col-lg-3 col-md-4">
        <div class="content-card monitor-list-panel">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h2 class="settings-section-title mb-0">Active Monitors</h2>
                <span id="editingBadge" class="editing-badge" style="display: none;">Editing</span>
            </div>

            <button id="addMonitorBtn" class="btn-add-monitor" onclick="addNewMonitor()">
                <i class="fas fa-plus"></i> Add New Monitor
            </button>

            <div id="monitorList" class="monitor-list">
                <!-- Monitor cards rendered by JS -->
            </div>
        </div>
    </div>

    <!-- Right Panel: Configuration -->
    <div class="col-lg-9 col-md-8">
        <!-- Placeholder when no room selected -->
        <div id="noRoomPlaceholder" class="content-card text-center" style="padding: 80px 32px;">
            <i class="fas fa-video" style="font-size: 3rem; color: var(--text-muted); margin-bottom: 16px;"></i>
            <h3 style="color: var(--text-secondary);">Select a monitor or add a new one</h3>
            <p style="color: var(--text-muted);">Choose a monitor from the list to configure its settings</p>
        </div>

        <!-- Room configuration form -->
        <div id="roomConfigPanel" style="display: none;">
            <!-- General Settings -->
            <div class="content-card config-section mb-4">
                <h2 class="config-section-title">General Settings</h2>

                <div class="mb-3">
                    <label for="roomName" class="form-label-dark">Camera Name</label>
                    <input id="roomName" class="form-control-dark" type="text" placeholder="e.g. Baby's Room" />
                </div>

                <div class="mb-3">
                    <label for="monitorType" class="form-label-dark">Monitor Type</label>
                    <select id="monitorType" class="form-select-dark">
                        <option value="camera_audio">Camera with Audio</option>
                        <option value="audio_only">Audio Only</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label-dark">Room Icon</label>
                    <div id="iconSelector" class="icon-selector">
                        <button type="button" class="icon-option selected" data-icon="baby"><i class="fas fa-baby"></i></button>
                        <button type="button" class="icon-option" data-icon="baby-carriage"><i class="fas fa-baby-carriage"></i></button>
                        <button type="button" class="icon-option" data-icon="bed"><i class="fas fa-bed"></i></button>
                        <button type="button" class="icon-option" data-icon="moon"><i class="fas fa-moon"></i></button>
                        <button type="button" class="icon-option" data-icon="star"><i class="fas fa-star"></i></button>
                        <button type="button" class="icon-option" data-icon="heart"><i class="fas fa-heart"></i></button>
                        <button type="button" class="icon-option" data-icon="home"><i class="fas fa-home"></i></button>
                        <button type="button" class="icon-option" data-icon="door-open"><i class="fas fa-door-open"></i></button>
                    </div>
                </div>
            </div>

            <!-- Source Configuration -->
            <div class="content-card config-section mb-4">
                <h2 class="config-section-title">Source Configuration</h2>

                <div class="toggle-row mb-3">
                    <div class="toggle-info">
                        <span class="toggle-label">Enable Video Stream</span>
                        <span class="toggle-description">Stream video from the camera</span>
                    </div>
                    <label class="toggle-switch">
                        <input id="enableVideoStream" type="checkbox" />
                        <span class="toggle-slider"></span>
                    </label>
                </div>

                <div class="mb-3">
                    <label for="cameraStreamUrl" class="form-label-dark">Camera Stream URL</label>
                    <input id="cameraStreamUrl" class="form-control-dark" type="text"
                           placeholder="rtsp://192.168.1.100:554/stream" />
                    <div class="form-hint">RTSP, HTTP, or MJPEG camera URL</div>
                </div>

                <div class="toggle-row mb-3">
                    <div class="toggle-info">
                        <span class="toggle-label">Use Camera Audio Stream</span>
                        <span class="toggle-description">Monitor audio from the camera's built-in microphone</span>
                    </div>
                    <label class="toggle-switch">
                        <input id="useCameraStream" type="checkbox" />
                        <span class="toggle-slider"></span>
                    </label>
                </div>

                <div class="mb-3">
                    <label for="fallbackAudioDevice" class="form-label-dark">Fallback Audio Device</label>
                    <select id="fallbackAudioDevice" class="form-select-dark">
                        <option value="">None</option>
                    </select>
                    <div class="form-hint">Used when camera audio is unavailable</div>
                </div>
            </div>

            <!-- Audio Processing (Global Settings) -->
            <div class="content-card config-section mb-4">
                <h2 class="config-section-title">Audio Processing</h2>

                <div class="mb-4">
                    <label for="soundThreshold" class="form-label-dark">Sound Threshold (dB)</label>
                    <input id="soundThreshold" class="form-control-dark" type="number" step="0.5" value="-20" />
                    <div class="form-hint">Levels above this value trigger recording and alerts</div>
                </div>

                <div class="toggle-row mb-4">
                    <div class="toggle-info">
                        <span class="toggle-label">Reduce Background Noise</span>
                        <span class="toggle-description">Filter out ambient noise below threshold</span>
                    </div>
                    <label class="toggle-switch">
                        <input id="reduceNoise" type="checkbox" />
                        <span class="toggle-slider"></span>
                    </label>
                </div>

                <div class="toggle-row mb-3">
                    <div class="toggle-info">
                        <span class="toggle-label">Enable Audio Filters</span>
                        <span class="toggle-description">Apply high and low pass filters to audio stream</span>
                    </div>
                    <label class="toggle-switch">
                        <input id="filterEnabled" type="checkbox" />
                        <span class="toggle-slider"></span>
                    </label>
                </div>

                <hr class="settings-divider" />

                <div class="row g-4">
                    <div class="col-md-6">
                        <label for="highPassFrequency" class="form-label-dark">High Pass (Hz)</label>
                        <input id="highPassFrequency" class="form-control-dark" type="number"
                               min="20" max="2000" step="10" value="300" />
                        <div class="form-hint">Remove frequencies below this value</div>
                    </div>
                    <div class="col-md-6">
                        <label for="lowPassFrequency" class="form-label-dark">Low Pass (Hz)</label>
                        <input id="lowPassFrequency" class="form-control-dark" type="number"
                               min="200" max="20000" step="100" value="4000" />
                        <div class="form-hint">Remove frequencies above this value</div>
                    </div>
                </div>
            </div>

            <!-- Live Monitor -->
            <div class="content-card config-section mb-4">
                <h2 class="config-section-title">Live Monitor</h2>

                <div class="audio-level-label">Audio Level</div>
                <div id="audioLevelValue" class="audio-level-value">0.0</div>
                <div class="audio-level-subtitle">Current Noise Level: <span id="audioLevelText">0.0</span> dB</div>

                <div class="text-center mb-3">
                    <span id="monitoringBadge" class="monitoring-badge inactive">
                        <span class="dot"></span>
                        <span id="monitoringBadgeText">Not Monitoring</span>
                    </span>
                </div>

                <div class="audio-meter-bar">
                    <div id="audioMeter" class="audio-meter-fill"></div>
                </div>

                <div id="soundAlert" class="sound-alert" style="display: none;"></div>

                <div class="d-flex gap-3 mt-3">
                    <button id="startWebRtcStreamBtn" class="btn-monitor-start">
                        <i class="fas fa-play"></i> Start Monitor
                    </button>
                    <button id="stopWebRtcStreamBtn" class="btn-monitor-stop">
                        <i class="fas fa-stop"></i> Stop Monitor
                    </button>
                </div>
            </div>

            <!-- Save / Delete buttons -->
            <div class="d-flex gap-3">
                <button id="saveRoomBtn" class="btn-monitor-start" onclick="saveRoomConfig()">
                    <i class="fas fa-save"></i> Save Configuration
                </button>
                <button id="deleteRoomBtn" class="btn-monitor-stop" onclick="deleteCurrentRoom()">
                    <i class="fas fa-trash"></i> Delete Monitor
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Settings message toast -->
<div id="settingsMessage" class="settings-toast" style="display: none;"></div>

@section Scripts {
    <script src="~/lib/microsoft-signalr/signalr.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}
